<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/inventory/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <input type="text" name="classification_name" pattern="[a-zA-Z0-9]+" required value="<%= locals.classification_name %>">
    <input type="submit" value="Add Classification">
</form>