<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="classificationForm" action="/inv/inventory/add-classification" method="post" class="validated-form">
    <span>Field is required</span>
    <label for="classification_name">Classification Name</label>
    <span>Name must be alphabetic characters only</span>
    <input type="text" id="classification_name" name="classification_name" pattern="[a-zA-Z0-9]+" required value="<%= locals.classification_name %>">
    <input type="submit" value="Add Classification" class="form-submit">
</form>