<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
 <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>



<div class="deleteReview">
<h2>Delete <%- carReview %> Review</h2>
<form id="deleteReviewForm" action="/account/review/delete-review" method="post" class="validated-form">

<span>Confirm Correct Item! Deletion cannot be undone.</span>

<label for="review_date">Review Date</label>
<input type="text" id="review_date" name="review_date" value="<%-reviewDate%>" readonly>

<label for="review_text">Review Text</label>
<textarea id="review_text" name="review_text"  readonly><%-locals.review_text%></textarea>

<input type="submit" value="Delete" id="submitButton">

<input type="hidden" name="review_id"
<% if(locals.review_id) { %> value="<%= locals.review_id %>"
<% } %>>
</form>
</div>